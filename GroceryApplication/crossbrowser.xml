<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Crossbrowser">

	<test thread-count="5" name="FirefoxTest">
		<parameter name="browsers" value="fireFox"></parameter>
		<classes>
			<class name="testscript.LoginTest">
				<methods>
					<include name="verifyUserLoginWithValidCredentials"></include>
					<include
						name="verifyUserLoginWithValidUsernameandInvalidPassword"></include>
					<include
						name="verifyUserLoginWithInvalidUsernameandvalidPassword"></include>
					<include
						name="verifyUserLoginWithInvalidUsernameandInvalidPassword"></include>
				</methods>
			</class>
		</classes>
	</test> <!-- Test -->
	<test thread-count="5" name="ChromeTest">
		<parameter name="browsers" value="chrome"></parameter>
		<classes>
			<class name="testscript.LoginTest">
				<methods>
					<include name="verifyUserLoginWithValidCredentials"></include>
					<include
						name="verifyUserLoginWithValidUsernameandInvalidPassword"></include>
					<include
						name="verifyUserLoginWithInvalidUsernameandvalidPassword"></include>
					<include
						name="verifyUserLoginWithInvalidUsernameandInvalidPassword"></include>
				</methods>
			</class>
		</classes>
	</test>
	<test thread-count="5" name="EdgeTest">
		<parameter name="browsers" value="edge"></parameter>
		<classes>
			<class name="testscript.LoginTest">
				<methods>
					<include name="verifyUserLoginWithValidCredentials"></include>
					<include
						name="verifyUserLoginWithValidUsernameandInvalidPassword"></include>
					<include
						name="verifyUserLoginWithInvalidUsernameandvalidPassword"></include>
					<include
						name="verifyUserLoginWithInvalidUsernameandInvalidPassword"></include>
				</methods>
			</class>
		</classes>
	</test>
</suite> <!-- Suite -->

